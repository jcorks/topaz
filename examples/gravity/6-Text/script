#include "@topaz.core"

class StringVisual : Topaz.Entity {
    private var visual;
    private var bg;
    func onReady() {
        visual = Topaz.Text2D();
        visual.font = "MyFont";
        visual.size = 40;

        visual.text = "Hello world!\nThis is text.";

        bg = Topaz.Shape2D();
        bg.formRectangle(
            visual.extentWidth,
            visual.extentHeight
        );
        bg.color = Topaz.Color("purple");

        components = [bg, visual];
    }
}




func main() {
    Topaz.Resources.loadAsset(
        "", // asset extension,
        "PublicSans-Regular.ttf",
        "MyFont"
    );

    Topaz.FontManager.registerFont("MyFont");


    var ent = StringVisual();
    ent.position = Topaz.Vector(200, 200);
    Topaz.root = ent;
}
