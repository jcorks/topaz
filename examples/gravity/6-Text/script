#include "@topaz.core"

class StringVisual : Entity {
    private var visual;
    private var bg;
    func onReady() {
        visual = Text2D();
        visual.font = "MyFont";
        visual.size = 40;

        visual.text = "Hello world!\nThis is text.";

        bg = Shape2D();
        bg.formRectangle(
            visual.extentWidth,
            visual.extentHeight
        );
        bg.color = Color("purple");

        components = [bg, visual];
    }
}




func main() {
    Resources.loadAsset(
        "", // asset extension,
        "PublicSans-Regular.ttf",
        "MyFont"
    );

    FontManager.registerFont("MyFont");


    var ent = StringVisual();
    ent.position = Vector(200, 200);
    Topaz.root = ent;
}