var StringVisual = function() {
    const visual = new Topaz.Text2D();    
    visual.font = 'MyFont';
    visual.size =  40;


    const bg = new Topaz.Shape2D();
    bg.color = new Topaz.Color('purple');



    return {
        props : {
            setText : function(text) {
                visual.text = text;
                bg.formRectangle(
                    visual.extentWidth,
                    visual.extentHeight
                );
            }
        },

        onReady : function(ent) {
            ent.components = [bg, visual];
        }
    }
}



Topaz.Resources.loadAsset(
    "", // asset extension,
    "PublicSans-Regular.ttf",
    "MyFont"
);


Topaz.FontManager.registerFont('MyFont');



var ent = new Topaz.Entity(StringVisual);
ent.setText('Hello world!\nThis is text.');



ent.position = new Topaz.Vector(200, 200);
Topaz.root = ent;


