StringVisual = tclass({
    inherits = Topaz.Entity,
    define = function(ent)
        local visual = Topaz.Text2D.new();    
        visual.font = 'MyFont';
        visual.size =  40;


        local bg = Topaz.Shape2D.new();
        bg.color = Color.fromString('purple');

        ent.components = {bg, visual};

        ent.interface({
            setText = function(text)
                visual.text = text;
                bg.formRectangle(
                    visual.extentWidth,
                    visual.extentHeight
                );
            end
        });
    end
});



Topaz.Resources.loadAsset(
    "", -- asset extension,
    "PublicSans-Regular.ttf",
    "MyFont"
);


Topaz.FontManager.registerFont('MyFont');



ent = StringVisual.new();
ent.setText('Hello world!\nThis is text.');



ent.position = {x=200, y=200};
Topaz.root = ent;


